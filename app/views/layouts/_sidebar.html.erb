<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      Search
    </p>
  </header>
  <div class="card-content">
    <div class="content">
		
	  <div class="control has-icons-left">
	    <input class="input" type="search" placeholder="Search">
	    <span class="icon is-small is-left">
	      <i class="fas fa-search"></i>
	    </span>
	  </div>
	  <a class="button is-fullwidth is-info" style="margin-top:10px;">Search</a>
    </div>
  </div>
</div>

<br>

<article class="message">
  <div class="message-body">
	 <div class="tags">
		 <% @categories.each do |category|%>
		 <%= cache category do %>
	   <span class="tag is-warning"><%= category.name%></span>
	   <%end%>
	   <%end%>
	 </div>
  </div>
</article>



<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      Email Subscription
	  
    </p>
  </header>
  <div class="card-content">
    <div class="content">
		
	  <div class="control has-icons-left has-icons-right">
	    <input class="input" type="email" placeholder="Email">
	    <span class="icon is-small is-left">
	      <i class="fas fa-envelope"></i>
	    </span>
	    <span class="icon is-small is-right">
	      <i class="fas fa-check"></i>
	    </span>
	  </div>
	  <a class="button is-fullwidth is-info" style="margin-top:10px;">Subscribe</a>
	  <p class="is-size-7"  style="margin-top:10px;">No spam just news articles delivered directly to your inbox.</p>
    </div>
  </div>
</div>





